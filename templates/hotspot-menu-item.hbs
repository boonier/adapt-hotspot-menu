<button class="menu-item-hotspot{{#if _isVisited}} visited{{/if}}{{#if _isComplete}} complete icon-tick{{/if}}{{#if _isLocked}} locked icon-padlock-locked{{/if}} icon" style="top:{{_hotspotMenuItem.position._top}}%; left:{{_hotspotMenuItem.position._left}}%" data-id="{{_id}}" aria-label="" role="button"></button>
<div class="menu-item-inner{{#if _isLocked}} disabled{{/if}}{{#if _popupPosition}} offset-{{_popupPosition}}{{/if}}{{#if _animatedPopup}} is-animated"{{/if}}" {{#if _popupPosition}}style="top:{{_hotspotMenuItem.position._top}}%; left:{{_hotspotMenuItem.position._left}}%"{{/if}}>
	<button class="menu-item-done icon icon-cross" aria-label=""></button>
	<div class="menu-item-title">{{{displayTitle}}}</div>
	<div class="menu-item-body">
		<div class="menu-item-body-inner">{{{body}}}</div>
	</div>
	{{#if _assessment}}
	<div>
		<div>Assessment Info:</div>
		<div>Completion status: {{#if _assessment.isComplete}}Complete{{else}}Not Completed{{/if}} </div>
		{{#if _assessment.hasScore}}
			<div>Last Attempt Score: {{_assessment.scoreAsPercentage}}%</div>
		{{/if}}
		<div>Passed status: {{#if _assessment.isPassed}}Passed{{else}}Not Passed{{/if}} </div>
	</div>
	{{/if}}
	<div class="menu-item-controls">
		{{#unless _isLocked}}
		<button class="menu-item-button {{#if _isVisited}}visited{{/if}}" data-id="{{_id}}" aria-label="">
			{{{linkText}}}
		</button>
		{{/unless}}
		<span class="menu-item-duration">Duration: {{{duration}}}</span>
	</div>
</div>
